<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="VerticalSeekBar">
        <attr name="vertical_color" format="color" />
        <attr name="circle_radius" format="dimension" />
        <attr name="circle_color" format="color" />
        <attr name="dragable" format="boolean" />
        <attr name="image_background" format="reference" />
        <attr name="max_count" format="integer"/>
        <attr name="min_count" format="integer"/>
    </declare-styleable>

    <declare-styleable name="VerticalSeekBar_NEW">
        <attr name="seekBarRotation">
            <!-- Clock wise - 90 deg; top = min, bottom = max -->
            <enum name="CW90" value="90" />
            <!-- Clock wise - 270 deg; bottom = min, top = max -->
            <enum name="CW270" value="270" />
        </attr>
    </declare-styleable>
</resources>
